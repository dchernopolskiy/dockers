<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>ownCloud</Name>
  <Description>ownCloud gives you universal access to your files through a web interface or WebDAV. It also provides a platform to easily view and sync your contacts, calendars and bookmarks across all your devices and enables basic editing right on the web.</Description>
  <Registry>https://registry.hub.docker.com/u/gfjardim/owncloud/</Registry>
  <Repository>gfjardim/owncloud</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>SUBJECT</Name>
      <Value>/C=COUNTRY/ST=STATE/L=City/O=Organization/OU=Organization Unit/CN=yourhome.com</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/var/www/owncloud/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
</Container>